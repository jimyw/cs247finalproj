		<section id="about">
			<div class="row">
				<div id="container">
					<div class="direction" id="simplecammsg">Please take a photo to match the pattern on the left. <span class="msg" id="status">Allow your browser to use your video camera.</span></div>

					<div class="border" id="videowrapper">
						<video id="video"></video>
						<img src="images/Heart1.jpg" width=320 id="overlay">
					</div>
					<button class="button" id="startbutton">Take photo</button>
					<button class="button" id="donebutton">Done!</button>
					<a href="/?collage_id={{fb_collage_id}}"><button class="button" id="cancelbutton">Cancel</button></a>
					<canvas id="canvas"></canvas>
					<div class="border" id="photowrapper"><img src="images/Heart1.jpg" class="" id="photo" alt="photo"></div>
					<p id="countdown"></p>
				</div>

				<div id="fb_collage_id" style="display: none;">{{fb_collage_id}}</div>
				<div id="fb_tile_id" style="display: none;">{{fb_tile_id}}</div>
				<div id="fb_filled" style="display: none;">{{filled}}</div>
			</div>
		</section>

		<section id="hire" class="bg">
			<div class="row">
				<div class="six columns offset-by-six">
					<h1>Now please also record a personal message!</h1>
				</div>
			</div>
		</section>	

		<section id="vmsg">
			<div class="row">
				<div class="direction">Don't forget to leave a personal video and/or text message :) <span class="msg" id="status"></span></div>
				<div class="centered" ><input type="checkbox" name="my-checkbox" checked></div>

				<div>
				<form name="input" id="submission" action="/postVideo" method="post">
					<input type="hidden" name="fb_collage_id" value="{{fb_collage_id}}">
					<input type="hidden" name="fb_tile_id" value="{{fb_tile_id}}">
					<input type="hidden" id="video_form" name="video" value="">
					<input type="hidden" id="audio_form" name="audio" value="">
					<button type="submit" class="button" id="finish">Finish!</button>
				</form>
				</div>
				<div class="wrapper_helper">
					<div class="cropper not-recording" id="record_container" ><div id="webcam_stream"></div></div>
					<div class="cropper not-recording" id="play_container" ><div id="video_container"></div></div>
					<div id="audio_link"></div>
					<div class="cropper not-recording" id="stat_container" ><div id="video_link"></div></div>
					<div id="start_recording"><img src="/images/record.jpg" id="btn_record"/><span id="videocountdown"></span></div>
					<div id="stop_recording"><img src="/images/stop.jpg" id="btn_record2"/></div>
					<div id="replay_recording"><img src="/images/replay2.png" id="btn_record3"/></div>
				</div>
				<div id="fb_collage_id" style="display: none;">{{fb_collage_id}}</div>
				<div id="fb_tile_id" style="display: none;">{{fb_tile_id}}</div>
			</div>
		</section>

